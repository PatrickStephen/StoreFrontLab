@model IEnumerable<StoreFrontLab.DATA.EF.Item>

@{
    ViewBag.Title = "Index";
}

@*<h2>@ViewBag.Title</h2>*@
<section class="bg-light">
    <div id="indexWrapper">
        @if (User.IsInRole("Admin"))
        {
            <p>
                @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
            </p>

        }

        <table class="table table-striped table-bordered">
            <tr>
                <th class="col-md-1">

                </th>
                <th class="col-md-3">
                    @Html.DisplayNameFor(model => model.ItemName)
                </th>
                <th class="col-md-1">
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th class="col-md-1">
                    @Html.DisplayNameFor(model => model.Author)
                </th>
                @*<th class="col-md-2">
                        @Html.DisplayNameFor(model => model.Description)
                    </th>*@
                <th class="col-md-1">
                    @Html.DisplayNameFor(model => model.Category.CategoryType)
                </th>
                <th class="col-md-1">
                    @Html.DisplayNameFor(model => model.Status.StatusName)
                </th>
                @if (User.IsInRole("Admin"))
                {
                    <th class="col-md-2"></th>
                }
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a href="@Url.Action("Details",new {id=item.ItemID})" title="@item.ItemName">
                            <img src="~/Content/assets/images/Books/t_@item.ItemImage" alt="@item.ItemName" />
                        </a>
                        @*@Html.DisplayFor(modelItem => item.ItemImage)*@
                    </td>
                    <td>
                        <a href="@Url.Action("Details", new { id = item.ItemID })" title="@item.ItemName">
                            @Html.DisplayFor(modelItem => item.ItemName)
                        </a>
                      
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Author)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.CategoryType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status.StatusName)
                    </td>

                        <td class="text-right">
                    @if (User.IsInRole("Admin"))
                    {

                            @Html.ActionLink("Edit", "Edit", new { id = item.ItemID }, new { @class = "btn btn-secondary btn-sm" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.ItemID }, new { @class = "btn btn-danger btn-sm" })
                            }

                        </td>
                    </tr>
                }

                </table>
            </div>
        </section>